<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/info_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/event_image_qr_d"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="30dp"
                android:layout_marginStart="20dp"
                tools:src="@drawable/devfest_2023"/>

            <TextView
                android:id="@+id/event_name_qr_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/event_image_qr_d"
                app:layout_constraintStart_toEndOf="@id/event_image_qr_d"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="30dp"
                tools:text="devfest 2023"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_bold"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/event_type_qr_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/event_name_qr_d"
                app:layout_constraintStart_toStartOf="@id/event_name_qr_d"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                tools:text="Conference"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/event_date_qr_d"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/event_type_qr_d"
                app:layout_constraintStart_toStartOf="@id/event_type_qr_d"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                tools:text="will be announced..."
                android:textStyle="bold"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_regular"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/qr_code_d"
                android:layout_width="300dp"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/event_image_qr_d"
                tools:src="@drawable/devfest_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:contentDescription="@null"/>

            <TextView
                android:id="@+id/profile_name_qr_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/qr_code_d"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="Rammohan Locharla"
                android:textSize="18sp"
                android:textColor="@color/gl_blue"
                android:fontFamily="@font/quicksand_bold"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/profile_mail_qr_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/profile_name_qr_d"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="locharla.rammohan@gmail.com"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:fontFamily="@font/quicksand_regular"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="40dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>